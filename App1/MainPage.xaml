        <TextBlock x:Name="windowarea" HorizontalAlignment="Left" Margin="988,380,0,0" TextWrapping="Wrap" Text="0 cm^2" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="-13.515,-0.37"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Height="33" Margin="526,534,0,0" VerticalAlignment="Top" Width="136" Click="button_Click" ClickMode="Press" FontWeight="Bold" FontFamily="SimSun-ExtB">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FFC0DCE6" Offset="0.148"/>
                    <GradientStop Color="#FF9B9FA0" Offset="0.826"/>
