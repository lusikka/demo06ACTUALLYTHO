            </Button.Background>
        </Button>
        <TextBlock x:Name="karmi" HorizontalAlignment="Left" Margin="988,464,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock x:Name="text1" HorizontalAlignment="Left" Margin="774,299,0,0" TextWrapping="Wrap" Text="Ikkunan Pinta-ala" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock x:Name="text2" HorizontalAlignment="Left" Margin="787,380,0,0" TextWrapping="Wrap" Text="Lasin Pinta-ala" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="802,464,0,0" TextWrapping="Wrap" Text="Karmin Piiri" VerticalAlignment="Top" FontSize="20"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="203" Margin="749,293,0,0" VerticalAlignment="Top" Width="373"/>
    </Grid>
